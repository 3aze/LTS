_G.WaitPerAmount=_G.WaitPerAmount or 500;local a=workspace.Terrain;local b=game:GetService("Lighting")local function c(a)if a:IsA("BasePart")or a:IsA("MeshPart")then a.Material=Enum.Material.SmoothPlastic;a.Reflectance=0;a.CastShadow=false end end;a.WaterWaveSize=0;a.WaterWaveSpeed=0;a.WaterReflectance=0;a.WaterTransparency=0;sethiddenproperty(a,"Decoration",false)b.GlobalShadows=false;b.ShadowSoftness=0;b.FogEnd=9e9;settings().Rendering.MeshPartDetailLevel=5;local a=workspace:FindFirstChild("world")and workspace.world:FindFirstChild("map")if not a then print("map does not exist.")return end;local b=a:GetDescendants()local d=math.min(#b,_G.WaitPerAmount)for a=1,#b,d do for a=a,math.min(a+d-1,#b)do c(b[a])end;task.wait(0.01)end;a.DescendantAdded:Connect(function(a)task.delay(1,function()c(a)end)end)
